        android:textSize="19sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/background"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="19sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/background"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="19sp" />



</LinearLayout>
